<h2>予定の確認</h2>
<% next_mon=Time.now.next_week.monday %>
<% next_tue=next_mon.+(1.day) %>
<% next_wed=next_mon.+(2.days) %>
<% next_thu=next_mon.+(3.days) %>
<% next_fri=next_mon.+(4.days) %>
<% next_sat=next_mon.+(5.days) %>
<% next_sun=next_mon.+(6.days) %>
<h3>
  <%= next_mon.strftime('%m/%d') %>(月)
</h3>
 <% @shift_mon=@shift.where(work_day:next_mon) %>
  <% @shift_mon.each do |shift| %>
    <li>
        <%= shift.user.last_name %>さん
        <%= shift.start_time.strftime('%H:%M') %>〜
        <%= shift.end_time.strftime('%H:%M') %>
      <% if shift&.break_start.present? %>
        休憩<%= shift.break_start.strftime('%H:%M') %>〜
        <%= shift.break_end.strftime('%H:%M') %>
      <% end %>
    </li>
  <% end %>
